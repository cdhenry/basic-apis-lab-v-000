<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>
<div class="results">
  <% if @error %>
    <p><%= @error %></p>
  <% elsif @results %>
    <ul>
    <% @results.each do |result| %>
      <li>
        <%= result["name"] %><br>
        <%= result["description"] %><br>
        <%= link_to @results["html_url"], @results["html_url"] %>
      </li>
    <% end %>
    </ul>
  <% end %>
</div>
